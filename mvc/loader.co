fs = require \fs
path = require \path

class exports.Loader
	(folder)->
		@traverse folder,""
	traverse: (dir)->
		err,files <- fs.readdir dir
		throw err if err
		for file of files
			err,stat <- fs.stat path.join dir,file
			throw err if err
			if stat.isDirectory!
				@traverse file
			else
				require path.join dir,file 